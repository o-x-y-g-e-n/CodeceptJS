{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmit": true,
    "strictNullChecks": false,
    "types": [
        "node"
    ],
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "lib",
    "typings"
  ],
  "exclude": [
    "typings/tests"
  ]
}
